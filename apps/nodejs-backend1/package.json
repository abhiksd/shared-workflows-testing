{
  "name": "nodejs-backend1-notification-service",
  "version": "1.0.0",
  "description": "Production-ready Node.js notification service with monitoring, security, and Azure integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t nodejs-backend1 .",
    "docker:run": "docker run -p 3000:3000 nodejs-backend1",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "security-audit": "npm audit && snyk test"
  },
  "keywords": [
    "nodejs",
    "express",
    "backend",
    "api",
    "microservice",
    "azure",
    "kubernetes",
    "monitoring",
    "prometheus"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-azure-application-insights": "^3.0.0",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "redis": "^4.6.11",
    "node-cache": "^5.1.2",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-azure-ad": "^4.3.5",

    "@azure/identity": "^4.0.1",
    "@azure/storage-blob": "^12.17.0",
    "@azure/monitor-opentelemetry-exporter": "^1.0.0-beta.20",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/instrumentation-express": "^0.34.1",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "@opentelemetry/instrumentation-redis": "^0.35.1",
    "prom-client": "^15.1.0",
    "express-prometheus-middleware": "^1.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "snyk": "^1.1248.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}